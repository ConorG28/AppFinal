<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.appfinal.WorkoutActivity">

    <TextView
        android:id="@+id/workouttitle"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Todays Workout"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/showworkouts"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Show"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/ex1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Exercise 1:"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/a"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="........"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-40dp"

        />
    <TextView
        android:id="@+id/ex2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Exercise 2:"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"

        />
    <TextView
        android:id="@+id/b"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="......."
        android:layout_marginTop="-40dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/ex3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Exercise 3:"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/c"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:text="......"
        android:layout_marginTop="-40dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/ex4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Exercise 4:"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        />
   <TextView
       android:id="@+id/d"
       android:layout_width="200dp"
       android:layout_height="40dp"
       android:text="......"
       android:textSize="20dp"
       android:textColor="@color/colorPrimary"
       android:layout_marginRight="20dp"
       android:layout_gravity="right"
       android:layout_marginTop="-40dp"
       />
    <TextView
        android:id="@+id/ex5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Exercise 5:"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/e"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="......."
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="-40dp"

        />
    <Button
        android:id="@+id/Workcom"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="FINISH"
        android:onClick="goBoard"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"

        />






</LinearLayout>
