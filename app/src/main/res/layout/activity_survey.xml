<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.appfinal.SurveyActivity">


    <TextView
        android:id="@+id/surveytitle"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Client Survey"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/sdate"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorPrimary"
        android:hint="Enter Name and Date"
        android:textSize="20dp"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/Q1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="How was the overall session?"
       android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />
    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/Q2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="How difficult was the session?"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />
    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/Q3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="How enjoyable was the session?"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        />
    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/Q5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:text="How is Your Overall Mood?"
        android:textSize="20dp"
        />
    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/surveysubmit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:onClick="submitsurvey"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="SUBMIT"
        />

</LinearLayout>
