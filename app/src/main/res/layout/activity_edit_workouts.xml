<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context="com.example.appfinal.EditWorkoutsActivity">

    <TextView
        android:id="@+id/workoutedits"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/colorPrimary"
        android:text="Edit Workouts"
        android:textSize="24dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"

        />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Please Enter Exercise 1"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="Please Enter Exercise 2"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/edit3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Please Enter Exercise 3"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        />
    <EditText
        android:id="@+id/edit4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Please Enter Exercise 4"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"

        />
    <EditText
        android:id="@+id/edit5"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Please Enter Exercise 5"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/submit_workouts"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="SUBMIT"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="submitworkout"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />










</LinearLayout>
